OASISFormat: 0.3
Name:        imagelib
Version:     0.1
Synopsis:    Image processing library, fork of camlimages
Authors:     Jun Furuse, et al.
License:     LGPL-2.1 with OCaml linking exception
Plugins:     META (0.3), StdFiles (0.3), DevFiles (0.3)
XStdFilesAUTHORS: false
XStdFilesREADME: false
BuildTools:   ocamlbuild
FilesAB:     src/config.ml.ab

Flag all
  Description: Enable all optional features
  Default: false

Flag freetype
  Description: Enable Freetype support
  Default$: flag(all) || false

Flag gif
  Description: Enable GIF support
  Default$: flag(all) || false

Flag graphics
  Description: Enable Graphics module support
  Default$: flag(all) || false

Flag jpeg
  Description: Enable JPEG support
  Default$: flag(all) || false

Flag gtk
  Description: Enable lablgtk2 support
  Default$: flag(all) || false

Flag png
  Description: Enable PNG support
  Default$: flag(all) || false

Flag tiff
  Description: Enable TIFF support
  Default$: flag(all) || false

Flag xpm
  Description: Enable XPM support
  Default$: flag(all) || false

Library imagelib_graphics
  Build:        false
  if flag(graphics)
    Build: true
  Path:         src/
  Pack:         true
  BuildDepends: graphics, imagelib
  Modules:      Graphic,
                OGraphic
  FindlibName:  graphics
  FindlibParent: imagelib

Library imagelib_gtk
  Build:        false
  if flag(gtk)
    Build: true
  Path:         src/
  Pack:         true
  BuildDepends: lablgtk2, imagelib
  Modules:      Imagegdk,
                OXimage,
                Ximage
  FindlibName:  gtk
  FindlibParent: imagelib

Library imagelib
  Path:         src/
  Pack:         true
  Modules:      Bitmap,
                Blend,
                Bmp,
                Config,
                Cmyk32,
                Colorhist,
                Color,
                Freetype,
                Ftlow,
                Fttext,
                Genimage,
                Geometry,
                Gif,
                Images,
                Index16,
                Index8,
                Jis_table,
                Jis_unicode,
                Jpeg,
                Mstring,
                OBmp,
                OColor,
                OFreetype,
                OGif,
                OImages,
                OJpeg,
                OPng,
                OPpm,
                OPs,
                OTiff,
                OXpm,
                OXvthumb,
                Png,
                Ppm,
                Ps,
                Reduce,
                Region,
                Rgb24,
                Rgba32,
                Tiff,
                Tmpfile,
                Units,
                Xpm,
                Xvthumb
  CSources:     oversized.h,
                ft_stubs.c,
                gif_stubs.c,
                jpeg_stubs.c,
                png_stubs.c,
                tiff_stubs.c,
                xpm_stubs.c
  if flag(freetype)
    CCOpt+:     -DIMAGELIB_FREETYPE
    CCLib+:     -lfreetype
  if flag(gif)
    CCOpt+:     -DIMAGELIB_GIF
    CCLib+:     -lgif
  if flag(jpeg)
    CCOpt+:     -DIMAGELIB_JPEG
    CCLib+:     -ljpeg
  if flag(png)
    CCOpt+:     -DIMAGELIB_PNG
    CCLib+:     -lpng
  if flag(tiff)
    CCOpt+:     -DIMAGELIB_TIFF
    CCLib+:     -ltiff
  if flag(xpm)
    CCOpt+:     -DIMAGELIB_XPM
    CCLib+:     -lXpm

